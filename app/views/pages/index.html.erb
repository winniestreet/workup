<div class="homewell"  style="position:absolute; top:0px; margin-left: 50vh;">
          <div class="row">
            <div class="col-xs-6" style="text-align:center;">
              <h1 class="text-center">
                  Welcome to Workup
                  <%= form_tag(spaces_path, method: :get) do %>
                    <%= label :location, "Search spaces near : " %>
                    <%= text_field_tag :location, params[:location]%>
                    <%= submit_tag "Search" %>
                  <% end %>
              </h1>
            </div>
  </div>
</div>

