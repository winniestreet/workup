<div class="container">




<div id="space-carousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <!-- <ol class="carousel-indicators">
    <li data-target="#space-carousel" data-slide-to="0" class="active"></li>
    <li data-target="#space-carousel" data-slide-to="1"></li>
    <li data-target="#space-carousel" data-slide-to="2"></li>
  </ol> -->

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <% @space.images.each_with_index do |image, i| %>
      <% if i == 0%>
        <div class="item active">
      <% else%>
        <div class="item">
      <% end %>
      <%= image_tag(image)%>
      <div class="carousel-caption">
      	<h3>Caption Text</h3>
      </div>
    </div>
    <% end %>
  </div>
<!-- Controls -->
<% if @space.images.count !=1 %>
  <a class="left carousel-control" href="#space-carousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#space-carousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
<% end %>
</div> <!-- Carousel -->

<% if current_worker %>
