<script>
$(document).ready(function(){
  var date = $(".new-booking").data("date").replace(/\"/g, "");
  $(".new-booking").bind("click", function() {
    location.href = "/bookings/new?date=" + date + "&space=" + <%= @space.id %>
  });
});
</script>
