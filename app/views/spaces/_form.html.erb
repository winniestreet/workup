<%= form_for(space) do |f| %>
  <% if space.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(space.errors.count, "error") %> prohibited this space from being saved:</h2>

      <ul>
      <% space.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_area :name %>
  </div>

  <div class="field">
    <%= f.label :number %>
    <%= f.text_area :number %>
  </div>

  <div class="field">
    <%= f.label :street %>
    <%= f.text_area :street %>
  </div>

  <div class="field">
    <%= f.label :suburb %>
    <%= f.text_area :suburb %>
  </div>

  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state, collection: ['NSW', 'QLD', 'VIC', 'WA', 'SA', 'NT'], as: :radio_buttons%>
  </div>

  <div class="field">
    <%= f.label :postcode %>
    <%= f.text_area :postcode %>
  </div>

  <div class="field">
    <%= f.label :country %>
    <%= f.text_field :country, priority: ['Australia', 'New Zealand'] %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :wifi %>
    <%= f.check_box :wifi %>
  </div>

  <div class="field">
    <%= f.label :food %>
    <%= f.check_box :food %>
  </div>

  <div class="field">
    <%= f.label :meetroom %>
    <%= f.check_box :meetroom %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>

  <div class="field">
    <%= f.label :images %>
    <%= f.file_field :images, multiple: true %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
